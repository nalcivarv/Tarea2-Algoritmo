Algoritmo Area_triangulo
	
	//Definir Variables
	Definir base, altura, area Como Entero;
	
	//Datos de entrada
	Escribir "Ingresar la base del triangulo";
	Leer base;
	Escribir "Introduzca la altura del trinagulo";
	Leer altura;
	
	//Proceso Matematico
	area = (base * altura) /2;
	
	//Datos de Salida
	Escribir "El àrea es: ", area;
	
FinAlgoritmo
